{
	"info": {
		"_postman_id": "12345678-1234-1234-1234-123456789abc",
		"name": "API Apuestas",
		"description": "Colección de endpoints para la API de Apuestas deportivas",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Verificar Servidor",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/actuator/health",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"actuator",
						"health"
					]
				},
				"description": "Verificar que el servidor esté funcionando"
			},
			"response": []
		},
		{
			"name": "2. Ver Apuestas Usuario (Vacío)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/users/{{userId}}/bets",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users",
						"{{userId}}",
						"bets"
					]
				},
				"description": "Debería retornar array vacío inicialmente (las tablas se crean automáticamente)"
			},
			"response": []
		},
		{
			"name": "3. Crear Primera Apuesta",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"userId\": \"user123\",\n  \"matchId\": \"match456\",\n  \"market\": \"1X2\",\n  \"selection\": \"HOME\",\n  \"amount\": 100.00,\n  \"expectedOdds\": 2.50\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/bets",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"bets"
					]
				},
				"description": "Crear primera apuesta (creará las tablas automáticamente si no existen)"
			},
			"response": []
		},
		{
			"name": "4. Ver Apuestas Creadas",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/users/{{userId}}/bets",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users",
						"{{userId}}",
						"bets"
					]
				},
				"description": "Ver las apuestas que acabamos de crear"
			},
			"response": []
		},
		{
			"name": "5. Stream de Cuotas",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "text/event-stream"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/matches/{{matchId}}/odds/stream",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"matches",
						"{{matchId}}",
						"odds",
						"stream"
					]
				},
				"description": "Stream reactivo de cuotas (simulado cada 2 segundos)"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "user123",
			"type": "string"
		},
		{
			"key": "matchId",
			"value": "match456",
			"type": "string"
		}
	]
}
